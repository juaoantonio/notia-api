{
  "name": "notia-api",
  "version": "1.0.0",
  "type": "module",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "src/server.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "dotenv -e envs/.env -- node dist/server.js",
    "test": "NODE_OPTIONS='--import tsx' vitest run --reporter junit --coverage --outputFile=results.xml",
    "test:watch": "NODE_OPTIONS='--import tsx' vitest",
    "test:ui": "NODE_OPTIONS='--import tsx' vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prisma:generate": "dotenv -e envs/.env.development -- prisma generate",
    "prisma:migrate": "dotenv -e envs/.env.development -- prisma migrate dev",
    "prisma:deploy": "dotenv -e envs/.env.development -- prisma migrate deploy",
    "prisma:studio": "dotenv -e envs/.env.development -- prisma studio",
    "prisma:seed": "dotenv -e envs/.env.development -- tsx prisma/seed.ts",
    "db:up": "docker compose up -d db || docker compose up -d",
    "db:down": "docker compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.13.0",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "fastify": "^5.4.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "fastify-type-provider-zod": "^5.0.3",
    "http-status-codes": "^2.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
